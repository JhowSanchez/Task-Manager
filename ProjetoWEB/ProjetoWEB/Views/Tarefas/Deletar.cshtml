@model ProjetoWEB.Models.Tarefas
@{
    ViewData["Title"] = "Deletar Tarefa";
}

<h1 style="color: red;">Deseja realmente deletar esse contato ? Essa operação é irreversivel</h1>


<div>
    <dl class="row">
        <dt class="col-sm-2">
            <th>Detalhes da Tarefa</th>
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.DetalhesTarefa)
        </dt>
        <dt class="col-sm-2">
            <th>Data da Tarefa</th>
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.DataTarefa)
        </dt>
        <dt class="col-sm-2">
            <th>Prioridade da Tarefa</th>
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Prioridadade)
        </dt>
    </dl>
</div>



<form asp-action="DeletarTarefa" asp-route-id="@Model.ID">
    <input type="submit" value="Deletar" class="btn btn-danger" />
</form>
<a asp-action="Index" asp-route-id="@Model.ID_Usuario">Voltar</a>