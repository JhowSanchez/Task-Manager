@model ProjetoWEB.Models.Tarefas
@{
    ViewData["Title"] = "Editar Tarefa";
}

<h1>Editar Tarefa</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditarTarefa">
            <div class="form-group">
                <label class="control-label">Detalhes</label>
                <input asp-for="DetalhesTarefa" type="text" class="form-control" id="detalhesTarefa" name="detalhesTarefa" required />
            </div>

            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="DataTarefa" type="date" id="dataTarefa" name="dataTarefa" class="form-control" required />

            </div>

            <div class="form-group">
                <label class="control-label">Prioridade</label>
                <select asp-for="Prioridadade" id="prioridadeTarefa" name="prioridadeTarefa" class="form-control" asp-items="Html.GetEnumSelectList<PrioridadeTarefa>()">
                    <option value="">Selecione a prioridade</option>
                </select>
            </div>

            <br>
            <input type="hidden" asp-for="ID_Usuario" value="@Model.ID_Usuario" />
            <input type="hidden" asp-for="ID" value="@Model.ID" />
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

</hr>
<br>
<div>
    <a asp-action="Index" asp-route-id="@Model.ID_Usuario">Voltar</a>
</div>