@model ProjetoWEB.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="/css/erro.css" rel="stylesheet" />
    <script src="~/js/Cadastro.js" type="text/javascript"></script>
    
</head>
<body>
    <h1>Cadastro</h1>

    <form id="cadastroForm" method="post" asp-action="CadastroUsuario">
        <div class="form-group">
            <label for="email">Email: </label>
            <input type="text" id="email" name="email" class="form-control" required/>
            <small class="erro" id="erroEmail"></small>
        </div>
        <div class="form-group">
            <label for="dataNascimento">Data de Nascimento:</label><br />
            <input type="date" id="dataNascimento" name="dataNascimento" required>
            <small class="erro" id="erroData"></small>
        </div>
        <div class="form-group">
            <label for="senha">Senha: </label>
            <input type="password" id="senha" name="senha" class="form-control" required />
            <small class ="erro" id="erroSenha"></small>
        </div>
        <div class="form-group">
            <label for="senhaRepetida">Repetir Senha: </label>
            <input type="password" id="senhaRepetida" name="senhaRepetida" class="form-control" required />
            <small class="erro" id="erroSenhaRepetida"></small>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" >Confirmar</button>
        </div>
    </form>

</body>

<a asp-action="Login">Voltar</a>
