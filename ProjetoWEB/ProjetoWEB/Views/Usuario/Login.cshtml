@model ProjetoWEB.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/erro.css" rel="stylesheet" />
    <script src="~/js/Login.js" type="text/javascript"></script>
</head>
<body>
    <h1>Login</h1>

    <form id="loginForm" method="get" asp-action="ConfirmaLogin">
        <div class="form-group">
            <label for="email">Email: </label>
            <input type="text" id="email" name="email" class="form-control" required/>
            <small class ="erro" id="erroEmail"></small>
        </div>
        <div class="form-group">
            <label for="senha">Senha: </label>
            <input type="password" id="senha" name="senha" class="form-control" required />
            <small class="erro" id="erroSenha"></small>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </div> 
    </form>
    <a asp-action="Cadastro">Cadastro</a>
</body>
